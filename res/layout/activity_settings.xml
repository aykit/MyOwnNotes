<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".SettingsActivity"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	     >
	
	    <!--  Credentials -->
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_credentials" 
	        android:textSize="17sp"
	        android:layout_marginBottom="10dp"
	        />
	    	<!-- servername -->
	    <TextView
	        android:id="@+id/textview_server_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_server_address"
	        />
	    <EditText 
	        android:id="@+id/edittext_server_address"
	        android:inputType="textUri"
	        android:hint="@string/settings_text_server_address_hint"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:lines="1"
	        />
	    	<!-- username -->
	    <TextView
	        android:id="@+id/textview_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_username"
	        />
	     <EditText 
	        android:id="@+id/edittext_username"
	        android:inputType="text"
	        android:hint="@string/settings_text_username_hint"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:lines="1"
	        />
	     	<!-- password -->
		<TextView
	        android:id="@+id/textview_password"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_password"
	        />
	     <EditText 
	        android:id="@+id/edittext_password"
	        android:inputType="textPassword"
	        android:hint="@string/settings_text_password_hint"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:lines="1"
	        />
	     
	     <!-- Synchronization -->
	     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_synchronization" 
	        android:textSize="17sp"
	        android:layout_marginTop="20dp"
	        />
	     <CheckBox 
	         android:id="@+id/checkbox_sync_automatically"
	         android:checked="true"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/settings_text_sync_automatically"
	         />
	     
	     <!-- Note Title -->
	     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_defaultnotetitle" 
	        android:textSize="17sp"
	        android:layout_marginTop="20dp"
	        />
	     <CheckBox 
	         android:id="@+id/checkbox_defaultnotetitle"
	         android:checked="true"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/settings_text_defaultnotetitle_datetime"
	         />
	     
	     <!-- horizontal line -->

	     <View
	         android:id="@+id/grey_line"
	         android:layout_width="match_parent"
	         android:layout_height="1dp"
	         android:background="#aaaaaa"
	         android:layout_marginTop="30dp" />
	     
	     <!-- Extensive logcat -->
	     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_text_debug" 
	        android:textSize="17sp"
	        android:layout_marginTop="3dp"
	        />
	     <CheckBox 
	         android:id="@+id/checkbox_extensive_log"
	         android:checked="false"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/settings_text_extensive_log_output"
	         />
	     
	    
	
	</LinearLayout>
</ScrollView>